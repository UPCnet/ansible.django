SECRET_KEY = {{ secret_key }}

## Host name (for example app2u.beta.upcnet.es)
HOST = {{ allowed_hosts }}

## Environment
DEBUG = {{ debug | default('False')}}
LOGFILE = {{ logfile | default('logs/debug.log') }}

# LDAP settings
LDAP_URI = {{ ldap_uri }}
LDAP_BASE_DN = {{ ldap_base_dn }}
LDAP_BASE_PASS = {{ ldap_base_pass }}
LDAP_USERS_BASE = {{ ldap_user_base }}
LDAP_GROUP_BASE = {{ ldap_group_base }}
LDAP_USER_USERNAME_FIELD = {{ ldap_user_username_field | default('cn') }}
LDAP_USER_EMAIL_FIELD = {{ ldap_user_email_field | default('email') }}
LDAP_USER_NAME_FIELD = {{ ldap_user_name_field | default('sn') }}
LDAP_USER_SURNAME_FIELD ={{ ldap_user_surname_field | default('cn') }}
LDAP_SINGLE_USER_FILTER = {{ ldap_single_user_filter | default('(&(cn=%(user)s)(objectClass=person))')}}
LDAP_USERS_FILTER = {{ ldap_users_filter | default('(&(objectClass=person))')}}
LDAP_GROUP_FILTER = {{ ldap_group_filter | default('(&(objectClass=groupOfNames))') }}
LDAP_GROUP_NAME_FIELD = {{ ldap_group_name_field | default('cn') }}

# CACHE settings
CACHE_URL = {{ cache_url | default('memcache://127.0.0.1:11211') }}

# DB settings
DATABASE_URL = {{ database_url | default('sqlite://../db.sqlite3') }}
# DATABASE_URL = sqlite://../db.sqlite3
# DATABASE_URL = mysql://user:pwd@host:port/db_name
